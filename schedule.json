{
  "heartbeat": {
    "command": "echo",
    "args": "still alive",
    "interval": {
      "second": 3
    }
  },
  "current_day": {
    "command": "date",
    "interval": {
      "hour": 24
    }
  },
  "list_files_and_directories": {
    "command": "ls",
    "args": [
      "-l",
      "-a",
      "-h"
    ],
    "interval": {
      "minute": 1,
      "second": 10
    }
  }
}
